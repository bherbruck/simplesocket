{
  // "python.linting.enabled": false,
  "python.formatting.provider": "black",
  "[python]": {
    "editor.tabSize": 4
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.cache": true,
    "**/.coverage": true,
    "**/*.egg-info": true,
    "**/dist": true,
    "**/build": true
  },
  "remote.localPortHost": "allInterfaces"
}